  &lt;thead&gt;
      &lt;tr&gt;
          &lt;th&gt;項目&lt;/th&gt;
          &lt;th&gt;実績&lt;/th&gt;
          &lt;th&gt;増減率&lt;/th&gt;
      &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
      &lt;tr&gt;
          &lt;td&gt;&lt;strong&gt;総資産&lt;/strong&gt;&lt;/td&gt;
          &lt;td&gt;¥627.2 億（前期 +2.15%）&lt;/td&gt;
          &lt;td&gt;–&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;&lt;strong&gt;純資産&lt;/strong&gt;&lt;/td&gt;
          &lt;td&gt;¥467.9 億（+5.96%）&lt;/td&gt;
          &lt;td&gt;–&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;&lt;strong&gt;自己資本比率&lt;/strong&gt;&lt;/td&gt;
          &lt;td&gt;74.6%（+2.7pt）&lt;/td&gt;
          &lt;td&gt;–&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;&lt;strong&gt;営業CF&lt;/strong&gt;&lt;/td&gt;
